<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructionsScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/instructions_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

	    <TextView
	        android:id="@+id/instructionsTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:layout_marginTop="90dp"
	        android:text="@string/instructions"
	        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginBottom="40dp"/>

	    <Button
	        android:id="@+id/continueButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:layout_marginTop="20dp"
	        android:background="@color/light_blue"
	        android:padding="5dp"
	        android:text="@string/next_continue"
	        android:textColor="@color/prize_text" android:layout_below="@id/instructionsTextView" android:layout_marginBottom="30dp"/>

    </RelativeLayout>
</ScrollView>